#include <iostream>
using namespace std;

class Animal {
public:
    virtual void speak() const {
        cout << "Animal speaks\n";
    }
};

class Dog : public Animal {
public:
    void speak() const override {
        cout << "Dog barks\n";
    }
};

class Cat : public Animal {
public:
    void speak() const override {
        cout << "Cat meows\n";
    }
};

int main() {
    Animal* a1 = new Dog();
    Animal* a2 = new Cat();

    a1->speak();  // ğŸ‘‰ ì‹¤ì œë¡œ Dog::speak() ì‹¤í–‰
    a2->speak();  // ğŸ‘‰ ì‹¤ì œë¡œ Cat::speak() ì‹¤í–‰

    delete a1;
    delete a2;
    return 0;
}

